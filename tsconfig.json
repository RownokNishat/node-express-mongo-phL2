{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  // "extends": "@tsconfig/node20/tsconfig.json",
 "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
}
